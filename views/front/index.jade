                .col-md-4.col-sm-4.search-col-padding
                  label 出发日期
                  .input-group
                    input.form-control(type='text', id='departure_date', placeholder='YYYY/MM/DD')
                    span.input-group-addon
                      i.fa.fa-calendar.fa-fw
                .clearfix
                .col-md-4.col-sm-4.search-col-padding
                  label 天数
                  select.selectpicker(name='package_duration')
                    option 5天
                    option 7天
                    option 12天
                .col-md-4.col-sm-4.search-col-padding
                  label 类型
                  select.selectpicker(name='package_type')
                    option 团体
                    option 家庭
                    option 个人
                    option 蜜月
                    option 亲子
                .col-md-4.col-sm-4.search-col-padding
                  label 预算
                  select.selectpicker(name='package_budget')
                    option 5000元以下
                    option 5000元-10000元
                    option 10000元以上
                .clearfix
                .col-md-12.search-col-padding
                  button.search-button.btn.transition-effect(type='submit') 搜索
                .clearfix
