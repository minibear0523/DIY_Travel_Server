  // BEGIN: SEARCH SECTION
  .row.bottom-search
    .container.clear-padding
      .col-md-12.search-section
        div(role='tabpanel')
          // BEGIN: CATEGORY TAB
          ul#searchTab.nav.nav-tabs.search-top(role='tablist')
            li.text-center.active(role='presentation')
              a(href='#DIY', aria-controls='DIY', role='tab', data-toggle='tab')
                i.fa.fa-pencil
                span 私人定制
            li.text-center(role='presentation')
              a(href='#FREE', aria-controls='FREE', role='tab', data-toggle='tab')
                i.fa.fa-suitcase
                span 自由行线路
          // END: CATEGORY TAB
          // BEGIN: TAB PANELS
          .tab-content
            // BEGIN: DIY TRAVEL
            #DIY.tab-pane.active(role='rolepanel')
              form
                .col-md-12.product-search-title 私人定制需求单
                .clearfix
                .col-md-4.col-sm-4.search-col-padding
                  label 出发地
                  .input-group
                    input.form-control(type='text', name='departure_city', required, placeholder='例如: 北京')
                    span.input-group-addon
                      i.fa.fa-map-marker.fa-fw
                .col-md-4.col-sm-4.search-col-padding
                  label 我想去...
                  .input-group
                    input.form-control(type='text', name='destination_city', required, placeholder='例如: 日本东京')
                    span.input-group-addon
                      i.fa.fa-map-marker.fa-fw
                .col-md-4.col-sm-4.search-col-padding
                  label 出发日期
                  .input-group
                    input#departure_date.form-control(type='text', name='departure_date', placeholder='YYYY/MM/DD')
                    span.input-group-addon
                      i.fa.fa-calendar.fa-fw
                .clearfix
                .col-md-4.col-sm-4.search-col-padding
                  label 天数
                  select.selectpicker(name='package_duration')
                    option 5天
                    option 7天
                    option 12天
                .col-md-4.col-sm-4.search-col-padding
                  label 类型
                  select.selectpicker(name='package_type')
                    option 团体
                    option 家庭
                    option 个人
                    option 蜜月
                    option 亲子
                .col-md-4.col-sm-4.search-col-padding
                  label 预算
                  select.selectpicker(name='package_budget')
                    option 5000元以下
                    option 5000元-10000元
                    option 10000元以上
                .clearfix
                .col-md-12.search-col-padding
                  button.search-button.btn.transition-effect(type='submit') 立即定制
                .clearfix
            // END: DIY TRAVEL
            // BEGIN: FREE TRAVEL
            #FREE.tab-pane(role='tabpanel')
              form
                .col-md-12.product-search-title 搜索自由行产品
                .col-md-4.col-sm-4.search-col-padding
                  label 出发地
                  .input-group
                    input.form-control(type='text', name='departure_city', required, placeholder='例如: 北京')
                    span.input-group-addon
                      i.fa.fa-map-marker.fa-fw
                .col-md-4.col-sm-4.search-col-padding
                  label 目的地
                  .input-group
                    input.form-control(type='text', name='destination_city', required, placeholder='例如: 日本东京')
