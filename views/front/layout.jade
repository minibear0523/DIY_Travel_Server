doctype html
html.load-full-screen(lang='zh')
  head
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='SkyStarStudio')
    title 一格旅行
    // STYLES
    link(href='/front/stylesheets/animate.min.css', rel='stylesheet')
    link(href='/front/stylesheets/bootstrap-select.min.css', rel='stylesheet')
    link(href='/front/stylesheets/owl.carousel.css', rel='stylesheet')
    link(href='/front/stylesheets/owl-carousel-theme.css', rel='stylesheet')
    link(href='/front/stylesheets/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='/front/stylesheets/flexslider.css', rel='stylesheet', media='screen')
    link(href='/front/stylesheets/style.css', rel='stylesheet', media='screen')
    // LIGHT
    link(href='/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(href='/front/stylesheets/light.css', rel='stylesheet', media='screen')
    // [if lt IE 9]
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    // [endif]
    block css-external

  body.load-full-screen
    include loading
    // BEGIN: SITE_WRAPPER
    .site-wrapper
      include header
      block content
      include footer

    script(src='/front/javascripts/respond.js')
    script(src='/front/javascripts/jquery.js')
    script(src='/plugins/owl.carousel.min.js')
    script(src='/front/javascripts/bootstrap.min.js')
    script(src='/front/javascripts/jquery-ui.min.js')
    script(src='/front/javascripts/bootstrap-select.min.js')
    script(src='/plugins/wow.min.js')
    script(src='/front/javascripts/js.js')
    block js-external