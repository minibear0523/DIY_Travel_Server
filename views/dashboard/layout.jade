doctype html
html(lang='zh')
  head
    meta(http-equiv="Content-Type", content='text/html; charset=utf-8')
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title 一格旅行Dashboard
    // STYLES
    link(href='/dashboard/vendors/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/dashboard/vendors/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(href='/dashboard/vendors/nprogress/nprogress.css', rel='stylesheet')
    block css-external
    link(href='/dashboard/stylesheets/custom.min.css', rel='stylesheet')

  body.nav-md
    .container.body
      .main_container
        .col-md-3.left_col
          .left_col.scroll-view
            .navbar.nav_title(style='border: 0;')
              a.site_title(href='/dashboard/')
                i.fa.fa-paw
                span 一格旅行Dashboard
            .clearfix
            // BEGIN: MENU PROFILE QUICK INFO
            .profile
              .profile_pic
                img.img-circle.profile_img(src='/dashboard/images/img.jpg', alt='...')
              .profile_info
                span 欢迎,
                h2 MiniBear0523
            // END: MENU PROFILE QUICK INFO
            br
            #siderbar-menu.main_menu_side.hidden-print.main_menu
              .menu_section
                h3 Dashboard
                ul.nav.side-menu
                  li
                    a(href='/dashboard/')
                      i.fa.fa-home
                      |  首页
                  li
                    a(href='/dashboard/packages')
                      i.fa.fa-suitcase
                      |  线路
                  li
                    a(href='/dashboard/diy')
                      i.fa.fa-pencil
                      |  私人定制
                  li
                    a(href='/dashboard/free')
                      i.fa.fa-suitcase
                      |  自由行
        // BEGIN: TOP NAVIGATION
        .top_nav
          .nav_menu
            nav
              .nav.toggle
                a#menu_toggle
                  i.fa.fa-bars
              ul.nav.navbar-nav.navbar-right
                li
                  a.user-profile.dropdown-toggle(href='javascript:;', data-toggle='dropdown', aria-expanded='false')
                    img(src='/dashboard/images/img.jpg', alt='')
                    | MiniBear0523
                    span.fa.fa-angle-double-down
                  ul.dropdown-menu.dropdown-usermenu.pull-right
                    li
                      a(href='javascript:;')  Profile
                    li
                      a(href='javascript:;')
                        span.badge.bg-red.pull-right 50%
                        span 设置
                    li
                      a(href='javascript:;') 帮助
                    li
                      a(href='/dashboard/login')
                        i.fa.fa-sign-out.pull-right
                        |  注销
        // END: TOP NAVIGATION
        // BEGIN: PAGE CONTENT
        .right_col(role='main')
          div
            .page-title
              .title_left
                h3 Plain Page
              .title_right
                .col-md-5.col-sm-5.col-xs-12.form-group.pull-right.top_search
                  .input-group
                    input.form-control(type='text', placeholder='...')
                    span.input-group-btn
                      button.btn.btn-default(type='submit') 搜索!
            .clearfix
            .row
              .col-md-12.col-sm-12.col-xs-12
                .x_panel
                  .x_title
                    h2 测试
                    ul.nav.navbar-right.panel_toolbox
                      li
                        a.collapse-link
                          i.fa.fa-chevron-up
                      li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                          i.fa.fa-wrench
                        ul.dropdown-menu(role='menu')
                          li
                            a(href='#') 设置1
                          li
                            a(href='#') 设置2
                      li
                        a.close-link
                          i.fa.fa-close
                    .clearfix
                  .x_content
                    block content
        // END: PAGE CONTENT
        // BEGIN: FOOTER CONTENT
        footer
          .pull-right
            | 一格旅行
            a(href='http://skystarstudio.com') SkyStar Studio
          .clearfix
        // END: FOOTER CONTENT
    script(src='/dashboard/vendors/jquery/dist/jquery.min.js')
    script(src='/dashboard/vendors/bootstrap/dist/js/bootstrap.min.js')
    script(src='/dashboard/vendors/fastclick/lib/fastclick.js')
    script(src='/dashboard/vendors/nprogress/nprogress.js')
    block js-external
    script(src='/dashboard/javascripts/custom.js')